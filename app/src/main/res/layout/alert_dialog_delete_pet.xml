<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alert_dialog_delete_pet_width"
    android:layout_height="@dimen/alert_dialog_delete_pet_height"
    android:backgroundTint="?attr/colorOnPrimarySurface"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewDeletePetDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/offset_16"
        android:textColor="?attr/colorPrimaryDark"
        android:text="@string/alert_dialog_delete_pet_message"
        android:textSize="@dimen/alert_dialog_delete_pet_message_text_size" />

    <ImageView
        android:id="@+id/imageViewDeletePetDialog"
        android:layout_width="@dimen/alert_dialog_delete_pet_image_view_width"
        android:layout_height="@dimen/alert_dialog_delete_pet_image_view_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/offset_4"
        android:layout_marginBottom="@dimen/offset_8"
        android:src="@drawable/ic_pet_kind_chinchilla" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_8"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAcceptDeletePetDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackground"
            android:text="@string/alert_dialog_delete_pet_button_accept_text"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="@dimen/alert_dialog_delete_pet_button_text_size" />

        <Space
            android:layout_width="@dimen/offset_32"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonCancelDeletePetDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackground"
            android:text="@string/alert_dialog_delete_pet_button_cancel_text"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="@dimen/alert_dialog_delete_pet_button_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
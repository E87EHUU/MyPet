<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.MyPet.CareContainer">

    <ImageView
        android:id="@+id/imageViewCareRecyclerRepeatIcon"
        style="@style/Theme.MyPet.CareHeaderIcon"
        android:contentDescription="@string/care_repeat_title"
        android:src="@drawable/baseline_repeat_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewCareRecyclerRepeatTitle"
        style="@style/Theme.MyPet.CareHeaderTitle"
        android:text="@string/care_repeat_title"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCareRecyclerRepeatIcon"
        app:layout_constraintStart_toEndOf="@+id/imageViewCareRecyclerRepeatIcon"
        app:layout_constraintTop_toTopOf="@+id/imageViewCareRecyclerRepeatIcon" />

    <TextView
        android:id="@+id/textViewCareRecyclerRepeatDescription"
        style="@style/Theme.MyPet.CareTextView"
        android:text="@string/care_repeat_description_none"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintStart_toStartOf="@+id/textViewCareRecyclerRepeatTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewCareRecyclerRepeatTitle" />

    <com.google.android.material.divider.MaterialDivider
        style="@style/Theme.MyPet.CareBottomDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCareRecyclerRepeatDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
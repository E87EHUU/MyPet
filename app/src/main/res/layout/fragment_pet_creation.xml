<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/pet_creation_fragment_margin"
    android:orientation="vertical"
    tools:context="com.example.mypet.ui.pet.creation.PetCreationFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/avatar_creation_size"
            android:layout_height="@dimen/avatar_creation_size"
            android:src="@drawable/profile" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/pet_creation_choose_photo" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pet_creation_pet_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_pet_creation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/creation_fragment_margin_top_for_view"
        android:text="@string/pet_creation_kind" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/app_compat_text_view_pet_creation_kind_list_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pet_creation_spinner_height" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_compat_text_view_pet_creation_breed_list_spinner_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/creation_fragment_margin_top_for_view"
        android:text="@string/pet_creation_breed" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/app_compat_spinner_pet_creation_breed_list_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pet_creation_spinner_height" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/creation_fragment_margin_top_for_view"
        android:text="@string/pet_creation_date_of_birth" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_compat_image_view_pet_creation_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_calendar_month_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_compat_text_view_pet_creation_selected_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/creation_fragment_margin_top_for_view"
        android:hint="@string/pet_creation_weight">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_pet_creation_weight"
            android:layout_width="@dimen/pet_creation_edit_text_width_of_weight"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/app_compat_button_pet_creation_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/creation_fragment_margin_top_for_view"
        android:text="@string/pet_creation_save" />
</androidx.appcompat.widget.LinearLayoutCompat>
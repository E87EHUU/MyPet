<resources>

    <style name="Base.Theme.MyPet" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/baseline_close_24</item>

        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MyPet" parent="Base.Theme.MyPet" />

    <style name="Theme.MyPet.ImageCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="mapButtonStyle">
        <item name="android:layout_width">@dimen/map_button_size</item>
        <item name="android:layout_height">@dimen/map_button_size</item>
        <item name="android:layout_marginEnd">@dimen/map_milli_margin</item>
        <item name="android:background">@drawable/square_round_corners</item>
        <item name="android:elevation">@dimen/offset_4</item>
    </style>

    <style name="Theme.MyPet.ViewHolderContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/offset_16</item>
    </style>

    <style name="Theme.MyPet.ViewHolderHeaderIcon">
        <item name="android:layout_width">@dimen/care_header_icon_size</item>
        <item name="android:layout_height">@dimen/care_header_icon_size</item>
        <item name="android:layout_marginStart">@dimen/offset_16</item>
    </style>

    <style name="Theme.MyPet.ViewHolderHeaderTitle">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/offset_16</item>
        <item name="android:layout_marginStart">@dimen/offset_8</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="Theme.MyPet.CareItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/care_item_min_height</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingEnd">@dimen/offset_32</item>
        <item name="android:paddingStart">@dimen/care_item_offset_start</item>
        <item name="android:paddingVertical">@dimen/offset_8</item>
        <item name="android:layout_marginTop">@dimen/offset_8</item>
    </style>

    <style name="Theme.MyPet.CareEndRadio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/care_end_radio_height</item>
    </style>

    <style name="Theme.MyPet.CareTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="Theme.MyPet.CareTextView.Date">
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Theme.MyPet.CareTextView.Time">
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Theme.MyPet.CareBottomDivider">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/offset_8</item>
    </style>

    <style name="Theme.MyPet.TextInputLayoutWrap" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.MyPet.TextInputLayoutZero" parent="@style/Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/offset_16</item>
    </style>

    <style name="Theme.MyPet.TextInputEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.MyPet.TextInputEditTextPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.MyPet.TextInputLayoutSpinner" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconDrawable">@drawable/baseline_arrow_drop_down_24</item>
        <item name="endIconMinSize">@dimen/text_input_layout_spinner_icon_size</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="Theme.MyPet.ChipWeek">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipEndPadding">2dp</item>
        <item name="chipStartPadding">2dp</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Theme.MyPet.CareAlarmItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/care_alarm_detail_item_min_height</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">@dimen/offset_32</item>
        <item name="android:paddingVertical">@dimen/offset_8</item>
    </style>

    <style name="Theme.MyPet.CareAlarmItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="Theme.MyPet.CareAlarmItemHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
    </style>

    <style name="Theme.MyPet.CareAlarmItemSwitch" parent="@style/Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
    </style>

</resources>